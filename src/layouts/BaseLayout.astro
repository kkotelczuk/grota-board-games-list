---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Grota – Katalog gier planszowych",
  description = "Przeglądaj katalog gier planszowych dostępnych w lokalu Grota w Gdańsku. Filtruj po liczbie graczy, trudności i wyszukuj po nazwie.",
} = Astro.props;
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta
      name="theme-color"
      content="#f7f5f0"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#0f2e1a"
      media="(prefers-color-scheme: dark)"
    />
    <title>{title}</title>
    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/images/logos/favicons/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/logos/favicons/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/logos/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/images/logos/favicons/favicon-48x48.png" />
    <link rel="apple-touch-icon" href="/images/logos/favicons/apple-touch-icon.png" />
    <link rel="apple-touch-icon" sizes="57x57" href="/images/logos/favicons/apple-touch-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="/images/logos/favicons/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="/images/logos/favicons/apple-touch-icon-120x120.png" />
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
    <script is:inline>
      // Initialize theme from localStorage or system preference
      (function () {
        const stored = localStorage.getItem("grota-theme");
        if (
          stored === "dark" ||
          (!stored && window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </body>
</html>
